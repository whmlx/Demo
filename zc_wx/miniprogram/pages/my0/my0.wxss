.order_bottom{
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx;
}
.order_bottom_txt{
  font-size: 20rpx;
  display: block;
}

.xq{
  width: 90%;
  background: white;
  margin: 200rpx auto;
  padding: 20rpx 0;
  border-radius: 10rpx;
}
.address{
  padding: 15rpx 30rpx;
}
.address_img{
  width:32rpx;
  height:32rpx;
  
}
