.login{
  height: 320rpx;
  width: 100%;
  background: #d12f3a;
  border-bottom-left-radius: 45%;
  border-bottom-right-radius: 45%;
  padding-top: 40rpx;
}
.login_img{
  display: block;
  width:120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto;
  overflow: hidden;
}
.login_txt{
  display: block;
  width: 100%;
  text-align: center;
  margin-top:10rpx;
}

.order{
  width: 90%;
  background: white;
  margin: -60rpx auto;
  position: absolute;
  left: 0;
  right: 0;
  border-radius: 10rpx;
}
.order_top_img{
  float:right;
}
.order_top{
  padding: 20rpx 20rpx;
  font-size: 28rpx;
  color:#353535;
  border-bottom: 1px solid #f2f2f2;
}
/* .order_top_img{
